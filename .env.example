DEV_PLAN_URL=https://dev-plan.cariloop.com
LOCAL_PLAN_URL=https://local-plan.cariloop.com

# Set to "true" if using the same account for both environments
# When true, the tool will logout between environments to avoid session conflicts
USE_SAME_CREDENTIALS=false

# Dev environment credentials
DEV_CARILOOP_EMAIL=dev.user@cariloop.com
DEV_CARILOOP_PASSWORD=dev-password

# Local environment credentials (only used if USE_SAME_CREDENTIALS=false)
LOCAL_CARILOOP_EMAIL=local.user@cariloop.com
LOCAL_CARILOOP_PASSWORD=local-password

# Viewport configuration
# Option 1: Use a preset (desktop-hd, desktop, laptop, tablet, mobile)
VIEWPORT_PRESET=desktop-hd
# Option 2: Custom dimensions (overrides preset)
# VIEWPORT_WIDTH=1920
# VIEWPORT_HEIGHT=1080

# Timeouts (in milliseconds)
LOGIN_NAV_TIMEOUT=45000
LOGIN_REDIRECT_TIMEOUT=45000
LOGIN_FORM_TIMEOUT=20000
PAGE_NAV_TIMEOUT=30000
CONTENT_READY_TIMEOUT=15000
SETTLE_DELAY=2000
LOGIN_RETRIES=1

# Auth app: Registration flow mode
# "screenshot-only" = Fill form + screenshot without submitting (default, non-destructive)
# "full-flow"       = Submit registration using a test user from the pool (destructive)
# "disabled"        = Skip registration flow entirely
AUTH_REGISTRATION_MODE=screenshot-only
